{
  "name": "typeforge",
  "version": "0.1.0",
  "private": true,
  "description": "Basic TypeScript Node.js repository scaffold (no frameworks).",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "node scripts/dev.mjs",
    "dev:server": "tsx watch src/index.ts",
    "dev:client": "vite",
    "test:ci": "vitest run --reporter=dot --coverage",
    "dev:server:debug": "tsx watch --inspect src/index.ts",
    "build:web": "vite build",
    "preview": "vite preview",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "check:biome": "biome check .",
    "prepare": "lefthook install",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run --no-ci",
    "audit:unused": "knip",
    "audit:unused:prod": "knip --production",
    "deps:dedupe": "pnpm dedupe",
    "deps:audit": "pnpm audit --prod",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore dist --ignore coverage --ignore build",
    "docs:format": "remark . -q -o --ext md --ignore-path .remarkignore",
    "docs:fix": "node scripts/docs-fix.mjs"
  },
  "engines": {
    "node": ">=24.6.0"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@evilmartians/lefthook": "^1.7.21",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@types/node": "^20.12.12",
    "@vitest/coverage-v8": "^3.2.4",
    "knip": "^5.33.1",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.42.0",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "remark-gfm": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "semantic-release": "^24.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
